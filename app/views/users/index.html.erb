 <h1>All Users</h1>
 
<div>
  <%= link_to "Back to your mailbox", conversations_path %>
</div>

 <div>
  <%@users.each do |user|%>
    <%if user.id != current_user.id%>
      <div>
        <%= user.name.capitalize!%>
        <%= button_to "Send Message", {controller: "conversations", action: "create", sender_id: current_user.id, recipient_id: user.id}, method: :post%>
        <%= link_to "Send Message", conversations_url(action: :create, method: :post, sender_id: current_user.id, recipient_id: user.id)%>
      </div>
    <%end%>
  <%end%>
 </div>

 