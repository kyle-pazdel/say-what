<h1>Coversation</h1>

<% @messages.each do |message|%>
  <%if message.body%>
    <div>
      <%= message.body%>
    </div>
    <div>
      <% user = User.find(message.user_id)%>
      <%= user.name.capitalize!%>
      <%= "at #{message.message_time}"%>
    </div>
  <%end%>
<%end%>
<%= render "form"%>
<%= link_to "Back to conversations", conversations_path%>