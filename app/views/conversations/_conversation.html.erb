<h1>Conversation</h1>
  <% conversation.messages.each do |message|%>
    <%if message.body%>
      <div>
        <%= message.body%>
      </div>
      <div>
        <% user = User.find(message.user_id)%>
        <%= user.name%>
        <%= "at #{message.message_time}"%>
      </div>
    <%end%>
  <%end%>
  <%= link_to "Back to conversations", conversations_path%>