
<div class="container-fluid">
  <div class="row row-height">
    <div class="col-sm-3 left bg-secondary">
      
        <div class="shadow p-3 mb-5 mt-4 bg-secondary rounded">
          <h3 class="text-light m-3">Your Mailbox</h3>
          <div class="input-group">
            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
            <button type="button" class="btn btn-primary">search</button>
          </div>
          <div class= "mt-3">
            <% @conversations.each do |conversation| %>
              <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
                <% if conversation.sender_id == current_user.id %>
                  <% recipient = User.find(conversation.recipient_id) %>
                <% else %>
                  <% recipient = User.find(conversation.sender_id) %>
                <% end %>
                <%unless !conversation.messages.last%>
                  <% if conversation.messages.last.read == false && conversation.messages.last.user_id != current_user.id%>
                  <div class="card mb-1 bg-dark text-light" style="max-width: 540px;">
                      <div class="row g-0">
                        <div class="col-md-4">
                          <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__480.png" class="img-fluid rounded-start" alt="blank user image">
                        </div>
                        <div class="col-md-8">
                          <div class="card-body">
                              <h5 class="card-title"><%= link_to recipient.name, {controller: "conversations", action: "index", id: conversation.id}, class: "btn btn-large btn-success "%></h5>
                              <p class="fw-bold card-text">Unread</p>
                              <p class="card-text"><small class="text-muted"><%= conversation.messages.last.message_time %></small></p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <%else%>
                      <div class="card m-1 bg-dark text-light" style="max-width: 540px;">
                      <div class="row g-0">
                        <div class="col-md-4">
                          <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__480.png" class="pt-1 pb-1 rounded-circle img-fluid " alt="blank user image">
                        </div>
                        <div class="col-md-8">
                          <div class="card-body">
                              <h5 class="card-title"><%= link_to recipient.name, {controller: "conversations", action: "index", id: conversation.id}, class: "btn btn-primary"%></h5>
                              <p class="fw-bold card-text"></p>
                              <p class="card-text"><small class="text-muted"><%= conversation.messages.last.message_time %></small></p>
                          </div>
                        </div>
                      </div>
                    </div>
                  <%end%>
                <%end%>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>


    <div class="no-pad col-sm-6 mid bg-secondary">
      <%if @conversation%>
        <% if @conversation.sender_id != current_user.id%>
          <% other_user = @conversation.sender.name%>
        <%else%>
          <% other_user = @conversation.recipient.name%>
        <%end%>
        <div class="row sticky-top bg-success p-2 text-white bg-opacity-75">
          <div class="col"><h3><%= other_user%></h3></div>
          <div class="col"><%= link_to "Delete this conversation", conversation_path(@conversation), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-sm btn-secondary" %></div>
        </div>
        <div class="h-100 d-inline-block p-4">
          <%= render @conversation%>
        </div>
        <div class="row sticky-bottom bg-success p-2 text-white bg-opacity-75">
          <%= render "messages/form"%>
        </div>
      <%else%>
        <div class="fst-italic text-center mt-5">Click on a user to start a conversation...</div>
      <%end%>
    </div>

    <div class="col-sm-3 right shadow p-3 mb-5 mt-4 bg-secondary rounded">
      
      <div>
        <h3 class="text-light m-3">Users</h3>
          <%@users.each do |user|%>
            <%if user.id != current_user.id%>
              <div>
                <%= link_to "#{user.name}", user%>
                <%= button_to "Send Message", {controller: "conversations", action: "create", sender_id: current_user.id, recipient_id: user.id}, class: "btn btn-large btn-primary"%>
              </div>
            <%end%>
          <%end%>
      </div>
    </div>
  </div>
</div>

